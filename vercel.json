{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.py",
      "use": "@vercel/python@latest",
      "config": {
        "maxLambdaSize": "50mb",
        "pythonVersion": "3.10" 
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/app.py",
      "methods": ["GET", "POST", "PUT", "DELETE"]
    }
  ]
}
